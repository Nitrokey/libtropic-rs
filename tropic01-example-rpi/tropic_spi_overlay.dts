/dts-v1/;
/plugin/;
/ {
    compatible = "brcm,bcm2835";
    fragment@0 {
        target = <&spi0_cs_pins>;
        frag0: __overlay__ {
            brcm,pins = <8 7 25>;
        };
    };
    fragment@1 {
        target = <&spi0>;
        frag1: __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            cs-gpios = <&gpio 8 1>, <&gpio 7 1>, <&gpio 25 1>;
            status = "okay";
            spidev0_0: spidev@0 {
                compatible = "spidev";
                reg = <0>;
                #address-cells = <1>;
                #size-cells = <0>;
                spi-max-frequency = <5000000>;
                spi-cs-setup-delay-ns = <25>; // should all be 20
				spi-cs-hold-delay-ns = <25>;
				spi-cs-inactive-delay-ns = <25000000>;
            };
            spidev0_1: spidev@1 {
                compatible = "spidev";
                reg = <1>;
                #address-cells = <1>;
                #size-cells = <0>;
                spi-max-frequency = <5000000>;
                spi-cs-setup-delay-ns = <25>; // should all be 20
				spi-cs-hold-delay-ns = <25>;
				spi-cs-inactive-delay-ns = <25000000>;
            };
            spidev0_2: spidev@2 {
                compatible = "spidev";
                reg = <2>;
                #address-cells = <1>;
                #size-cells = <0>;
                spi-max-frequency = <5000000>;
                spi-cs-setup-delay-ns = <25>; // should all be 20
				spi-cs-hold-delay-ns = <25>;
				spi-cs-inactive-delay-ns = <25000000>;
            };
        };
    };
};
